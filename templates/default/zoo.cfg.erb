# the directory where the snapshot is stored.
dataDir=<%= @data_dir %>
clientPort=<%= @port %>
tickTime=2000
initLimit=5
syncLimit=2
forceSync=no
autopurge.snapRetainCount=5
autopurge.purgeInterval=24
maxClientCnxns=0
<% @managers.each_with_index do |m, index| %>
<% if !m.name.nil? and !m["redBorder"].nil? and !m["redBorder"]["manager"].nil? and !m["redBorder"]["manager"]["services"].nil? and !m["redBorder"]["manager"]["services"]["current"].nil? and m["redBorder"]["manager"]["services"]["current"]["zookeeper"] %>
server.<%= index+1 %>=<%= m.name %>:2888:3888
<% end %>
<% end %>

